<!DOCTYPE html>
<html lang="en">

  {{> head}}

  <body>

    <div class="container content">
      <header class="masthead">
        <h3 class="masthead-title">
          <a href="{{{ root }}}/" title="Home">{{{ @root.site.title }}}</a>
          <small>{{{ @root.site.tagline }}}</small>
        </h3>
      </header>

      <main>
        {% body %}
      </main>

      <footer class="footer">
        <small>
          &copy; <time datetime="{{{date_to_xmlschema @root.site.time}}}">{{{date @root.site.time '%Y'}}}</time>. All rights reserved.
        </small>
      </footer>
    </div>

    {{#if @root.site.analytics_id}}
     <script>
       (function(i,s,o,g,r,a,m){{{ @root.site.analytics_id }}}ct']=r;i[r]=i[r]||function(){{{ @root.site.analytics_id }}}||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
       m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
       })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
       ga('create', '{{{ @root.site.analytics_id }}}', 'auto');
       ga('send', 'pageview');
     </script>
    {{/if}}
  </body>
</html>
