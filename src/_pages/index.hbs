---
layout: default
title: Home
---

<div class="posts">
  {{#each paginator.posts as |post|}}
  <article class="post">
    <h1 class="post-title">
      <a href="{{{ root }}}{{{ @post.data.url }}}">
        {{{ @post.data.title }}}
      </a>
    </h1>

    <time datetime="{{{date_to_xmlschema @post.data.date}}}" class="post-date">{{{date_to_string @post.data.date}}}</time>

    {{{ @post.html }}}
  </article>
  {{/each}}
</div>

<div class="pagination">
  {{#if paginator.next_page}}
    <a class="pagination-item older" href="{{{prepend paginator.next_page_path @root.site.baseurl}}}">Older</a>
  {{else}}
    <span class="pagination-item older">Older</span>
  {{/if}}
  {{#if paginator.previous_page}}
    <a class="pagination-item newer" href="{{{prepend paginator.previous_page_path @root.site.baseurl}}}">Newer</a>
  {{else}}
    <span class="pagination-item newer">Newer</span>
  {{/if}}
</div>
